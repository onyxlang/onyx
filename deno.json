{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["build.ts", "src/", "spec/", "test/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars"],
      "exclude": ["no-inferrable-types", "no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["build.ts", "src/", "spec/", "test/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}
